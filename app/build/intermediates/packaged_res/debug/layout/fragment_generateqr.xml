<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="85dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Сгенерировать \n QR-код"
        android:textColor="@color/red"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"

        android:text="Пожалуйста, введите сумму"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="60dp"
        android:paddingEnd="35dp">

        <EditText
            android:id="@+id/amount_edittxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/edittxt_style"
            android:importantForAutofill="no"
            android:inputType="numberDecimal|numberSigned"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingTop="3dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:maxLength="8"
            android:textSize="18sp" />
        <!-- <com.google.android.material.textfield.TextInputLayout
             android:id="@+id/username_input_layout"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"

             android:textColor="@color/black">

             <androidx.appcompat.widget.AppCompatEditText
                 android:id="@+id/amount_edittxt"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:background="@drawable/edittxt_style"
                 android:cursorVisible="false"
                 android:hint="Пожалуйста, введите сумму"
                 android:maxLines="1"
                 android:paddingStart="20dp"
                 android:paddingEnd="10dp"
                 android:textColor="@color/black"
                 android:textSize="30sp" />
         </com.google.android.material.textfield.TextInputLayout>
-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"

            android:text="@string/rub_symbol"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:translationY="-3dp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TableRow android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/pin1Btn"
                style="@style/pinBtn"
                android:layout_marginEnd="20dp"
                android:text="1"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/pin2Btn"
                style="@style/pinBtn"
                android:layout_marginEnd="20dp"
                android:text="2"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/pin3Btn"
                style="@style/pinBtn"
                android:text="3"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/pin4Btn"
                style="@style/pinBtn"
                android:layout_marginEnd="20dp"
                android:text="4"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/pin5Btn"
                style="@style/pinBtn"
                android:layout_marginEnd="20dp"
                android:text="5"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/pin6Btn"
                style="@style/pinBtn"
                android:text="6"

                android:textColor="@color/black" />
        </TableRow>

        <TableRow android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/pin7Btn"
                style="@style/pinBtn"
                android:layout_marginEnd="20dp"
                android:text="7"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/pin8Btn"
                style="@style/pinBtn"
                android:layout_marginEnd="20dp"
                android:text="8"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/pin9Btn"
                style="@style/pinBtn"
                android:text="9"

                android:textColor="@color/black" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/pin_comma_btn"
                style="@style/pinBtn"
                android:layout_marginEnd="20dp"
                android:text=","

                android:textColor="@color/black" />

            <Button
                android:id="@+id/pin0_btn"
                style="@style/pinBtn"
                android:layout_marginEnd="20dp"
                android:text="0"

                android:textColor="@color/black" />

            <Button
                android:id="@+id/pin_clean_btn"

                style="@style/pinBtn"
                android:text="&lt;"
                android:textColor="@color/black" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/get_q_r_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_button"
        android:fontFamily="sans-serif-light"
        android:text="@string/title_qr_code"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
      />
</LinearLayout>

