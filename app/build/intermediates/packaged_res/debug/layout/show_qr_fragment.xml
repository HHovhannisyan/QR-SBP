<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".ui.fragments.ShowQrFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:paddingTop="90dp"
        android:src="@drawable/brand" />

    <TextView
        android:id="@+id/scan_for_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/qrIvPayment"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:text="Сканируйте для оплаты"
        android:textAlignment="center"
        android:textColor="@color/black"

        android:textSize="18sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/qrIvPayment"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/wait_for_qr_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/get_q_r_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:text="@string/get_qr_fast"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="15sp" />

    <Button
        android:id="@+id/check_payment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:background="@drawable/red_button"
        android:fontFamily="sans-serif"
        android:text="Проверить оплату"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="invisible" />
</RelativeLayout>