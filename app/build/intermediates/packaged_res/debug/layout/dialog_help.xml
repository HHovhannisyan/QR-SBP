<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogHelpRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="30dp"
    android:paddingEnd="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Открыть счет в СБП"
        android:textColor="@color/red"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"

        android:text="Заполните анкету"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="ИНН*"
        android:inputType="text"
        android:singleLine="true" />

    <EditText
        android:id="@+id/phoneNumberEtHelpDialog"
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/phone_number_title_help_dialog"
        android:inputType="phone"
        android:singleLine="true" />

    <EditText
        android:id="@+id/contactPersonEtHelpDialog"
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/contact_person_title_help_dialog"
        android:inputType="text"
        android:singleLine="true" />


    <EditText
        android:id="@+id/commentEtHelpDialog"
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:gravity="top"
        android:hint="@string/comment_title_help_dialog"
        android:inputType="text"
        android:lines="1"
        android:maxLines="4"
        android:padding="4dp"
        android:textAlignment="inherit" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="@string/dialog_send_request_btn" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Назад"
        android:textAlignment="center"
        android:textColor="@color/black" />
</LinearLayout>
