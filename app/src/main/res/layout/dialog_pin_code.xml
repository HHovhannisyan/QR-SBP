<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setPinCodeDialogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="32dp"
    android:paddingTop="16dp"
    android:paddingEnd="32dp">

    <TextView
        android:id="@+id/pinCodeTvDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pin_code_title"
        android:textSize="15sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/pinCodeEtDialog"
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/newPinCodeTvDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/new_pin_code_title"
        android:textSize="15sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/newPinCodeEtDialog"
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/newPinCodeAgainTvDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/new_pin_code_again_title"
        android:textSize="15sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/newPinCodeAgainEtDialog"
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="15sp"
        android:visibility="gone" />
</LinearLayout>
