<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="100dp">

    <TextView
        android:id="@+id/resultTvPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#088F08"
        android:textSize="26sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/resultIvPayment"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBarPayment"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@null" />


    <TextView
        android:id="@+id/qr_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/qr_code_text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="invisible" />

    <!--   <Button
           android:id="@+id/getPaymentStatusBtnPayment"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:background="@drawable/delo_btn_background"
           android:text="@string/get_payment_status_btn_text"
           android:visibility="invisible" />-->

    <Button
        android:id="@+id/show_qr_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/red_button"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="@string/show_qr_btn_text"
        android:textColor="@color/white"
        android:visibility="invisible" />


</LinearLayout>